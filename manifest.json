{
  "manifest_version": 2,

  "name": "RandomYT",
  "description": "Click on a random video from youtube.",
  "version": "0.1a",
  "homepage_url": "https://github.com/Nekall",
  "icons": {
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ],

"browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }

}
