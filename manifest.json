{
  "manifest_version": 2,
  "name": "RandomYT",
  "description": "Click on a random video from youtube.",
  "version": "0.1a",
  "homepage_url": "https://github.com/Nekall",
  "icons": {
    "48": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js",
      "popup.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "RandomYT",
    "default_popup": "popup.html"
  }

}
